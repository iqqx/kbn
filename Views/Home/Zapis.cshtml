            placeholder="Номер телефона(обязательно)">
        <select name="place" required class="cursor-pointer px-50 py-25 text-[#1654A4] text-sm sm:text-2xl">
            @foreach (var item in ViewBag.Places) {
            <option value="@item.Id">@item.Name</option>
            }
        </select>
        <p class="flex items-start gap-10 text-lg text-[#1654A4]"><input name="check" required type="checkbox"
                class="block cursor-pointer max-w-35 max-h-35 w-full h-full appearance-none border-5 border-[#10D953] bg-[#71AAF4] checked:bg-[#10D953]">ПРЕДОСТАВЛЯЯ
